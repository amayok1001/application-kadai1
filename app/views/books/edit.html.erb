<h1>Editing Book</h1>

    <div class="form-box-edit">
    <%# ここにクリエイトボックスform_forヘルパーをつくる %>
        <%= form_for (@book) do |f| %>
            <h5> Title</h5>
            <%= f.text_field :title, class:"book_title" %>
            <h5> Body</h5>
            <%= f.text_area :body, class:"book_body" %>
            <br>
            <%= f.submit 'Update Book' %>
        <% end %>
    </div>

    <div class="link-box">
    <span class="show-link">
        <%= link_to 'Show', book_path(@book), class: "show_#{@book.id}"  %></span>
        |
    <span class="show-link"><%= link_to 'Back', books_path, class: "back" %>
    </span>